{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "target": "es2022",
        "module": "commonjs",
        "strict": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "types": [
            "jest",
            "node"
        ]
    },
    "include": [
        "src/core/engine/**/*"
    ],
    "exclude": [
        "src/core/assets/**/*",
        "src/core/base/**/*",
        "src/core/project/**/*",
        "src/lancher.ts"
    ]
}