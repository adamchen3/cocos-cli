{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "outDir": "../../../dist/core/engine",
        "rootDir": "..",
        "target": "es2022",
        "module": "commonjs",
        "strict": true,
        "composite": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "allowJs": true,
        "types": [
            "jest",
            "node"
        ]
    },
    "include": [
        "../**/*"
    ],
    "exclude": [
        "node_modules",
        "**/test/**",
        "**/*.test.ts",
        "../../../dist"
    ]
}